<?xml version="1.0" encoding="utf-8"?>


<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:fitsSystemWindows="true"
    tools:layout_editor_absoluteY="81dp">

    <TextView
        android:id="@+id/descripcion"
        android:layout_width="280dp"
        android:layout_height="83dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="120dp"
        android:fontFamily="@font/open_regular"
        android:gravity="center"
        android:text="Indique a los asistentes a que red WiFi esta conectado asi como el siguiente código"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textColor="#666666"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/RoomStart"
        android:layout_width="252dp"
        android:layout_height="40dp"
        android:layout_centerInParent="true"
        android:layout_marginTop="16dp"
        android:background="@drawable/custom_button"
        android:fontFamily="@font/opensans_semibold"
        android:gravity="center"
        android:text="Iniciar Sesión"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="#ffffff"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/pinName"
        app:layout_constraintStart_toStartOf="@+id/pinName"
        app:layout_constraintTop_toBottomOf="@+id/pinName"
        tools:ignore="HardcodedText" />


    <TextView
        android:id="@+id/pinName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="350dp"
        android:fontFamily="@font/opensans_semibold"
        android:text="CODIGO"
        android:textSize="40sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="230dp"
        android:layout_height="47dp"
        android:layout_marginStart="8dp"
        android:orientation="horizontal"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="@+id/RoomStart"
        app:layout_constraintStart_toStartOf="@+id/RoomStart"
        app:layout_constraintTop_toBottomOf="@+id/RoomStart">

        <TextView
            android:id="@+id/idiomText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/open_regular"
            android:gravity="center"
            android:text="Idioma"
            android:textAlignment="center"
            android:textColor="#666666"
            android:textSize="14sp"
            app:layout_constraintEnd_toStartOf="@+id/changeIdiom"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/RoomStart"
            app:layout_constraintTop_toBottomOf="@+id/RoomStart" />

        <TextView
            android:id="@+id/changeIdiom"
            android:layout_width="67dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/open_regular"
            android:gravity="center"
            android:text="@string/cambiar"
            android:clickable="true"
            android:onClick="setChangeIdiom"
            android:textColor="#005466"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="@+id/RoomStart"
            app:layout_constraintStart_toEndOf="@+id/idiomText"
            app:layout_constraintTop_toBottomOf="@+id/RoomStart"
            tools:ignore="MissingConstraints" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="261dp"
        android:layout_height="44dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="@+id/descripcion"
        app:layout_constraintHorizontal_bias="0.928"
        app:layout_constraintStart_toStartOf="@+id/descripcion"
        app:layout_constraintTop_toBottomOf="@+id/descripcion">

        <TextView
            android:id="@+id/wifiName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:text="Sin conexión"
            android:textColor="#4d4d4d"
            android:textSize="14sp"
            app:layout_constraintEnd_toStartOf="@+id/changeWiFi"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/descripcion"
            app:layout_constraintTop_toBottomOf="@+id/descripcion" />

        <TextView
            android:id="@+id/changeWiFi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp"
            android:clickable="true"
            android:fontFamily="@font/open_regular"
            android:gravity="center"
            android:onClick="setChangeWiFi"
            android:text="@string/cambiar"
            android:textAlignment="center"
            android:textColor="#005466"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="@+id/descripcion"
            app:layout_constraintStart_toEndOf="@+id/wifiName"
            app:layout_constraintTop_toBottomOf="@+id/descripcion"
            tools:ignore="MissingConstraints" />
    </LinearLayout>

</android.support.constraint.ConstraintLayout>